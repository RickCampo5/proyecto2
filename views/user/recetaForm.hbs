<button><a href="/profile">Atras</a></button>
<h2>Crea tu receta</h2>

<form action="/profile/crearReceta" method="POST" enctype="multipart/form-data">
<input type="file" name="photo">
<p>
  ¿Cómo se llama tu receta?
  <input type="text" name="nombre">
</p>
<div id="ingredientes">
  Ingredientes: <br>
  <input type="text" name="ingredientes"> <button type="button" id="btn-newing">+</button> <br> 
</div>
<p>
<select name="categoria">
  <option value="postre">Postre</option>
  <option value="ensalada">Ensalada</option>
  <option value="platoFuerte">Plato Fuerte</option>
</select>
</p>
<p>
  Preparacion:
  <input type="text" name="preparacion">
</p>

<button type="submit">Crear Receta</button>
</form>

<script>
  var boton = document.getElementById('btn-newing')
  
  boton.addEventListener('click', function(){
    var node = document.createElement('input')
    node.name = 'ingredientes'
    node.type = 'text'
    var div = document.getElementById('ingredientes')
    div.appendChild(node)
  })
</script>